<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cotizaciones_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarStyle="outsideOverlay"
    android:layout_margin="@dimen/factura_card_layout_margin"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/cotizacion_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/factura_card_padding_left"
        android:paddingTop="@dimen/factura_card_padding_top"
        android:paddingBottom="@dimen/factura_card_padding_bottom"
        android:background="@drawable/card_view_background">

        <LinearLayout
            android:id="@+id/cotizacion_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/factura_card_padding_top_title">

            <TextView
                android:id="@+id/cotizacion_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/factura_card"
                android:layout_weight="0.05"
                android:textStyle="bold"
                android:textSize="@dimen/text_normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textStyle="bold"
                android:layout_weight="0.05"
                android:textSize="@dimen/text_normal"/>

            <TextView
                android:id="@+id/cotizacion_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/factura_card_status"
                android:layout_weight="0.9"
                android:textStyle="bold"
                android:textSize="@dimen/text_normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cotizacion_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/cotizacion_title"
            android:paddingBottom="@dimen/factura_card_padding_top_detail">


            <TextView
                android:id="@+id/cotizacion_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/factura_card_nombre"
                android:layout_weight="0.3"
                android:textSize="@dimen/text_small"/>

        </LinearLayout>

        <TextView
            android:id="@+id/cotizacion_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cotizacion_details"
            android:text="@string/factura_card_fecha"
            android:textSize="@dimen/text_small"
            android:textColor="@color/colorDetails"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>