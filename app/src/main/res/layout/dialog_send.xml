<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/colorWhite">
    <ImageView
        android:id="@+id/dialog_send_close"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_send_close"
        android:orientation="vertical"
        android:padding="15dp">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar al correo del cliente"
                android:buttonTint="@color/colorDarkBlue"
                android:textColor="@color/colorDarkGrayText"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar a otro correo"
                android:buttonTint="@color/colorDarkBlue"
                android:textColor="@color/colorDarkGrayText"/>
        </RadioGroup>
        <EditText
            style="@style/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Correo electronico"
            android:visibility="gone" />
        <EditText
            style="@style/textArea"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="4"
            android:hint="Mensaje"/>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/log_in_pswd"
            android:text="Enviar"
            android:textAllCaps="false"
            android:background="@color/colorLightBlue"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/open_sans_regular"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>
