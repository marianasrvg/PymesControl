<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorGrayBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppBarSimple" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/app_bar_simple_background</item>
        <item name="android:titleTextColor">@color/colorDarkBlue</item>
    </style>
    <style name="AppBarSimpleTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30dp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>
    <style name="AppBarPdf" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/app_bar_simple_background</item>
        <item name="android:titleTextColor">@color/colorDarkBlue</item>
    </style>
    <style name="AppBarPdfTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="input">
        <item name="android:background">@drawable/input_background</item>
        <item name="android:padding">@dimen/text_normal</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColor">@color/colorDarkGrayText</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>
    <style name="textArea">
        <item name="android:background">@drawable/input_background</item>
        <item name="android:padding">@dimen/text_normal</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColor">@color/colorDarkGrayText</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:gravity">top</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorLightBlue</item>
        <item name="tabBackground">@color/colorWhite</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorLightBlue</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorDarkGrayText</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>